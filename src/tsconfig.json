{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "watch": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "./typings/**/*.ts"
    ],
    "files": [
        "main.ts",
        "./typings/karma/karma.d.ts",
        "./typing/react/react-addons-create-fragment.d.ts",
        "./typing/react/react-addons-css-transition-group.d.ts",
        "./typing/react/react-addons-linked-state-mixin.d.ts",
        "./typing/react/react-addons-perf.d.ts",
        "./typing/react/react-addons-pure-render-mixin.d.ts",
        "./typing/react/react-addons-shallow-compare.d.ts",
        "./typing/react/react-addons-test-utils.d.ts",
        "./typing/react/react-addons-transition-group.d.ts",
        "./typing/react/react-addons-update.d.ts",
        "./typing/react-dom.d.ts",
        "./typing/react.d.ts"
    ]
}
